<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:divider="@drawable/layout_divider_line"
    android:orientation="vertical"
    android:showDividers="beginning|middle|end">

    <Button
        android:id="@+id/btn_open_market"
        style="@style/tv_red_and_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_normal"
        android:text="打开行情页面" />

    <Button
        android:id="@+id/btn_open_h5"
        style="@style/tv_red_and_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_normal"
        android:text="打开FinestWebView页面" />

    <TextView
        android:id="@+id/tv_RxJava_OkGO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:padding="@dimen/margin_normal"
        android:text="RxJava_OkGO" />

    <TextView
        android:id="@+id/tv_custom_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:padding="@dimen/margin_normal"
        android:text="自定义控件-日历任务控件" />
</LinearLayout>