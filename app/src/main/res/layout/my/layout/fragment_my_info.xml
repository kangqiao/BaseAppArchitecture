<?xml version="1.0" encoding="utf-8"?>
<lib.homhomlib.design.SlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slidingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:background_view="@layout/bg_sliding_refresh"
    app:sliding_mode="both"
    app:sliding_pointer_mode="more">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:divider="@drawable/layout_divider_line"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <TextView
            android:id="@+id/tv_brokerage_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:padding="@dimen/margin_normal"
            android:text="佣金调整记录" />

        <TextView
            android:id="@+id/tv_switch_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:padding="@dimen/margin_normal"
            android:text="Switch切换开关实例" />

        <TextView
            android:id="@+id/tv_custom_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:padding="@dimen/margin_normal"
            android:text="自定义键盘" />

        <TextView
            android:id="@+id/tv_js_native"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="@dimen/margin_normal"
            android:text="JS-Native互调" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_notification_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@android:color/holo_green_dark"
                android:padding="@dimen/margin_normal"
                android:text="弹出通知" />

            <TextView
                android:id="@+id/tv_notification_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:padding="@dimen/margin_normal"
                android:text="隐藏通知" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_notification_after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="@dimen/margin_normal"
            android:text="稍后弹窗通知" />

        <TextView
            android:id="@+id/tv_test_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="@dimen/margin_normal"
            android:text="布局调度(流式布局...)" />

        <TextView
            android:id="@+id/tv_test_weex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:padding="@dimen/margin_normal"
            android:text="Weex 嵌入" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_test_diffutils"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:padding="@dimen/margin_normal"
                android:text="RecyclerView DiffUtils" />
            <TextView
                android:id="@+id/tv_test_sortlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:padding="@dimen/margin_normal"
                android:textColor="@color/text_color_white"
                android:text="RecyclerView SortList" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_wxrecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:padding="@dimen/margin_normal"
            android:text="仿微信视频拍摄UI, 基于ffmpeg的视频录制" />

        <TextView
            android:id="@+id/tv_fileprovider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="@dimen/margin_normal"
            android:text="FileProvider Test" />
    </LinearLayout>


</lib.homhomlib.design.SlidingLayout>